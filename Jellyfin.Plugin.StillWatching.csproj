<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.3.0</Version>
    <Authors>Gudaites</Authors>
    <Company>Gudaites</Company>
    <AssemblyTitle>Jellyfin.Plugin.StillWatching</AssemblyTitle>
    <Description>Pauses playback after a set period of inactivity.</Description>
    <PackageId>Jellyfin.Plugin.StillWatching</PackageId>
    <RootNamespace>Jellyfin.Plugin.StillWatching</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="10.11.0" IncludeAssets="compile" />
    <PackageReference Include="Jellyfin.Model" Version="10.11.0" IncludeAssets="compile" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\configPage.html" />
  </ItemGroup>

</Project>
